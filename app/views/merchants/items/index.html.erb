<%= @merchant.name %>

<ul id= "enabled">
  <% @merchant.enabled_items.each do |item| %>
        <li id=<%= "id-#{item.id}" %>>
          <%= link_to item.name, "/merchants/#{@merchant.id}/items/#{item.id}" %>
          <%= button_to "Disable", "/merchants/#{@merchant.id}/items/#{item.id}", method: :patch, params: {enabled: 1} %>
        </li>
    <% end %>
</ul>

<ul id= "disabled">
  <% @merchant.disabled_items.each do |item| %>
        <li id=<%= "id-#{item.id}" %>>
          <%= link_to item.name, "/merchants/#{@merchant.id}/items/#{item.id}" %>
          <%= button_to "Enable", "/merchants/#{@merchant.id}/items/#{item.id}", method: :patch, params: {enabled: 0} %>
        </li>
    <% end %>
</ul>



<%= button_to 'New Item', "/merchants/#{@merchant.id}/items/new", method: :get %>
